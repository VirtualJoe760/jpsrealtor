{
  "compilerOptions": {
    "target": "ES2022", // Update to the latest stable target for improved performance
    "lib": ["dom", "dom.iterable", "esnext"], // Include ESNext features
    "allowJs": true, // Enable JavaScript in the project
    "skipLibCheck": true, // Skip type checks of declaration files for faster builds
    "strict": true, // Enable strict mode for better type safety
    "noEmit": true, // Prevent emitting JavaScript files
    "esModuleInterop": true, // Compatibility with CommonJS and ES Modules
    "module": "esnext", // Use ESNext for module imports
    "moduleResolution": "node", // Standard module resolution
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Compatibility with Babel
    "jsx": "preserve", // Preserve JSX syntax for Next.js
    "incremental": true, // Enable incremental builds for performance
    "types": ["@types/node", "@types/react", "@types/react-dom"], // Add commonly used type definitions
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"], // Alias for cleaner imports
      "@/components*": ["./src/app/components"]
    }
  },
  "include": [
    "next-env.d.ts", // Include Next.js environment types
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts" // Include type definitions generated by Next.js
  ],
  "exclude": [
    "node_modules", // Exclude dependencies
    "**/*.test.ts", // Optional: Exclude test files if not needed
    "**/*.spec.ts" // Optional: Exclude spec files if not needed
  ]
}
